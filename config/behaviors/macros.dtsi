#include <dt-bindings/zmk/behaviors.h>
#include <dt-bindings/zmk/keys.h>
#include <zmk-helpers/helper.h>

// Navigation
ZMK_MACRO(next_desk, bindings = <&kp LG(RIGHT) >;)
ZMK_MACRO(prev_desk, bindings = <&kp LG(LEFT)>;)

// Switch Language
ZMK_MACRO(vn_en, bindings = <&kp LA(LC(SPACE))>;)

// Zoom
ZMK_MACRO(zoom_out, bindings = <&kp LC(MINUS)>;)
ZMK_MACRO(zoom_in,  bindings = <&kp LC(EQUAL)>;)
ZMK_MACRO(zoom_reset,  bindings = <&kp LC(N0)>;)

// Windows Management - Half
ZMK_MACRO(w_hleft, bindings = <&kp LG(LA(LEFT))>;)
ZMK_MACRO(w_hright, bindings = <&kp LG(LA(RIGHT))>;)
ZMK_MACRO(w_hcenter, bindings = <&kp LG(LA(DOWN))>;)

// Windows Management - Quarter
ZMK_MACRO(w_qtl, bindings = <&kp LG(LA(U))>;)
ZMK_MACRO(w_qtr, bindings = <&kp LG(LA(I))>;)
ZMK_MACRO(w_qbl, bindings = <&kp LG(LA(J))>;)
ZMK_MACRO(w_qbr, bindings = <&kp LG(LA(K))>;)

// Windows Management - Third
ZMK_MACRO(w_tl, bindings = <&kp LG(LA(D))>;)
ZMK_MACRO(w_tc, bindings = <&kp LG(LA(F))>;)
ZMK_MACRO(w_tr, bindings = <&kp LG(LA(G))>;)

// Windows Management - 2 Third
ZMK_MACRO(w_ttl, bindings = <&kp LG(LA(E))>;)
ZMK_MACRO(w_ttr, bindings = <&kp LG(LA(T))>;)

// Windows Management - Fullscreen
ZMK_MACRO(w_full, bindings = <&kp LG(LA(ENTER))>;)

// Screenshots
ZMK_MACRO(ss_zone, bindings = <&kp LC(LS(N2))>;) 
ZMK_MACRO(ss_mc_zone, bindings = <&kp LC(LS(N4))>;)

// Close windows
ZMK_MACRO(close_win, bindings = <&kp LC(W)>;) 
ZMK_MACRO(close_app, bindings = <&kp LC(Q)>;)

// Undo Redo
ZMK_MACRO(undo, bindings = <&kp LC(Z)>;) 
ZMK_MACRO(redo, bindings = <&kp LC(LS(Z))>;)

// Common actions
ZMK_MACRO(find,                   bindings = <&kp LC(F)>;) 
ZMK_MACRO(find_all,               bindings = <&kp LC(LS(F))>;) 
ZMK_MACRO(new_file,               bindings = <&kp LC(N)>;)
ZMK_MACRO(new_tab,                bindings = <&kp LC(T)>;)
ZMK_MACRO(new_private_tab,        bindings = <&kp LC(LS(N))>;) 
ZMK_MACRO(save_file,              bindings = <&kp LC(S)>;)
ZMK_MACRO(refresh,                bindings = <&kp LC(R)>;)
ZMK_MACRO(select_nxt_word,        bindings = <&kp LC(D)>;)
ZMK_MACRO(quick_cmd_tab,          bindings = <&kp LC(TAB)>;)
