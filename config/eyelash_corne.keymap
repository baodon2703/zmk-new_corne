// Tap: Undo | Double-tap: Redo
ZMK_TAP_DANCE(undo_redo, bindings = <&kp LG(Z)>, <&kp LG(LS(Z))>;
              tapping-term-ms = <200>;)

// Tap: Copy | Double Tab: Paste | Ctrl: Cut | Alt: Mac Paste Cut file
ZMK_TAP_DANCE(cp_pst, bindings = <&kp LG(C)>, <&kp LG(V)>; 
              tapping-term-ms = <200>;)
ZMK_MOD_MORPH(cp_pst_cut,
    bindings = <&cp_pst>, <&kp LG(X)>; /* Ctrl Override */
    mods = <(MOD_LCTL|MOD_RCTL)>; 
)
